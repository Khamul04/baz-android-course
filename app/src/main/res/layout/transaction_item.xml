<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lblPrice"
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:text="Hola"
        android:textSize="30sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/lblNamelbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Book"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lblAmount"
        app:layout_constraintTop_toBottomOf="@id/lblPrice"
        />

    <TextView
        android:id="@+id/lblName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        tools:text="Hola"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lblAmount"
        app:layout_constraintTop_toBottomOf="@id/lblNamelbl"
        />

    <TextView
        android:id="@+id/lblAmountlbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/lblNamelbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblPrice"
        />

    <TextView
        android:id="@+id/lblAmount"
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:text="Hola"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/lblName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblAmountlbl" />

</androidx.constraintlayout.widget.ConstraintLayout>